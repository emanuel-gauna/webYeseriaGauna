<!DOCTYPE html>
<html>
  <%- include("../partials/head")%>
  <body>
    <!-- Navbar (sit on top) -->

    <!-- Header -->
    <%- include("../partials/header")%> 

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= materials.nombre %></h1>
          <br />
          <h4> <% if(materials.descripcion === ""){ %>
             <%= materials.descripcion = "Plato Tipico" %>  
         <% }else { %>
          <%= materials.descripcion %>
        <% } %></h4>
          <p class="ps-text-grey">
            U$S <%= materials.precio %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= materials.image %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include("../partials/footer")%> 
    </div>
  </body>
</html>
